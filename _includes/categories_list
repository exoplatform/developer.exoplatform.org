{% comment %}<!--
The categories_list include is a listing helper for categories.
Usage:
  1) assign the 'categories_list' variable to a valid array of tags.
  2) include categories_list
  example:
    <ul>
  	  {% assign categories_list = site.categories %}
  	  {% include categories_list %}
  	</ul>
  
  Notes: 
    Categories can be either a Hash of Category objects (hashes) or an Array of category-names (strings).
    The encapsulating 'if' statement checks whether categories_list is a Hash or Array.
    site.categories is a Hash while page.categories is an array.

-->{% endcomment %}

{% if categories_list.first[0] == null %}
  {% for category in categories_list %}
    {% assign label_text = category | join: "/" %}
    {% assign label_counter = site.categories[category].size %}
    {% assign label_type = 'primary' %}
    {% assign label_fa_icon = 'fa-folder' %}
    {% capture label_link %}{{BASE_PATH}}{{site.categories_path}}#{{category}}-ref{% endcapture %}
    {% include label %}
  {% endfor %}
{% else %}
  {% for category in categories_list %}
    {% assign label_text = category[0] | join: "/" %}
    {% assign label_counter = category[1].size %}
    {% assign label_type = 'primary' %}
    {% assign label_fa_icon = 'fa-folder' %}
    {% capture label_link %}{{BASE_PATH}}{{site.categories_path}}#{{category[0]}}-ref{% endcapture %}
    {% include label %}
  {% endfor %}
{% endif %}
{% assign categories_list = nil %}
