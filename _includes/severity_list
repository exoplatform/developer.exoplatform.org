{% comment %}<!--
The severity_list include is a listing helper for severity.
Usage:
  1) assign the 'severity_list' variable to a valid array of severity.
  2) include severity_list
  example:
    <ul>
  	  {% assign severity_list = site.severity %}
  	  {% include severity_list %}
  	</ul>
  
  Notes: 
    Tags can be either a Hash of severity objects (hashes) or an Array of severity-names (strings).
    The encapsulating 'if' statement checks whether severity_list is a Hash or Array.
    site.severity is a Hash while page.severity is an array.

-->{% endcomment %}

{% if severity_list == nil or severity_list.empty? %}
  {% assign label_text = 'CODE REVIEW' %}
  {% assign label_type = 'danger' %}
  {% assign label_fa_icon = 'fa-shield' %}
  {% include label %}
{% else %}
  {% if severity_list.first[0] == null %}
    {% for severity in severity_list %}
      {% assign label_text = severity %}
      {% case severity %}
        {% when 'blocker' %}
          {% assign label_type = 'danger' %}
        {% when 'critical' %}
          {% assign label_type = 'warning' %}
        {% when 'major' %}
          {% assign label_type = 'primary' %}
        {% when 'info' %}
          {% assign label_type = 'info' %}
        {% when 'minor' %}
          {% assign label_type = 'default' %}
        {% else %}
          {% assign label_type = 'default' %}
      {% endcase %}
      {% assign label_fa_icon = 'fa-shield' %}
      {% include label %}
    {% endfor %}
  {% else %}
    {% for severity in severity_list %}
      {% assign label_text = severity[0] %}
      {% case severity[0] %}
        {% when 'blocker' %}
          {% assign label_type = 'danger' %}
        {% when 'critical' %}
          {% assign label_type = 'warning' %}
        {% when 'major' %}
          {% assign label_type = 'primary' %}
        {% when 'info' %}
          {% assign label_type = 'info' %}
        {% when 'minor' %}
          {% assign label_type = 'default' %}
        {% else %}
          {% assign label_type = 'default' %}
      {% endcase %}
      {% assign label_fa_icon = 'fa-shield' %}
      {% include label %}
    {% endfor %}
  {% endif %}
{% endif %}
{% assign severity_list = nil %}
